<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nebula_Share.MainPage"
             BackgroundColor="#010117">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">

        <Label Text="Nebula Share"
               FontSize="32"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <Label Text="Share your files effortlessly"
               FontSize="16"
               TextColor="LightGray"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,40,0,0">

            <Button Text="Send"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="20"
                    Padding="15"
                    CornerRadius="10"
                    WidthRequest="120"
                    Clicked="OnSendButtonClicked" />

            <Button Text="Receive"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="20"
                    Padding="15"
                    CornerRadius="10"
                    WidthRequest="120"
                    Clicked="OnReceiveButtonClicked" />

        </StackLayout>

    </StackLayout>

</ContentPage>